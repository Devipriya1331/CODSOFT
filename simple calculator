print("1.Add")
print("2.subtract")
print("3.multiply")
print("4.divide")
option=int(input("select an operation:"))

if(option in [1,2,3,4]):
  n1=int(input("Enter the fisrt number:"))
  n2=int(input("Enter the second number:"))
  
if(option ==1):
  result=n1+n2
elif(option==2):
  result=n1-n2
elif(option==3):
  result=n1*n2
elif(option==4):
  result=n1//n2
else:
  print("invalid operation entered")
  
print("the result of the operation is {}".format(result))

